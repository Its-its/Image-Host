<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8">
		<title>Gallery | {{ title }}</title>

		<link rel="shortcut icon" href="FAVICON.ico">

		<link rel="stylesheet" href="//cdn.jsdelivr.net/foundation/6.2.3/foundation.min.css">
		<link rel="stylesheet" href="/css/lib/font-awesome-4.0.3.css">
		<link rel="stylesheet" href="/css/core.css">

		<style>
			.new-image label {
				width: 100%;
			}

			.image-container {
				padding: 3px;
				margin-bottom: 2em;
				display: flex;
				max-height: 100em;
			}

			.image-container .image {
				text-align: center;
			}

			.image-container .image img {
				max-height: 100%;
				max-width: 100%;
			}

			.images {
				color: #bebebe;
			}
		</style>
	</head>
	<body>
		<!-- Navbar -->
		<div class="top-bar">
			<div class="top-bar-left">
				<ul class="dropdown menu" data-dropdown-menu>
					<li class="menu-text">{{ title }}</li>
				</ul>
			</div>
			<div class="top-bar-right">
				<ul class="menu">
					<a href="/" class="button">Home</a>
					<a href="/profile" class="button">Profile</a>
					<a href="/gallery" class="button">My Galleries</a>
				</ul>
			</div>
		</div>

		<div style="background-image: url('/img/bg2.jpg'); padding: 6px 0; margin-bottom: 10px;"></div>

		<!-- Images -->
		<div class="grid-x grid-margin-x">
			<div class="cell small-7 large-offset-1 images">
				<h2>Title goes here</h2>

				<div class="image-list">
					<div class="image-container">
						<div class="image" href="#">
							<img src="//i.thick.at/AccompanyingZorse777.jpeg" alt="Image">
						</div>
						{{!-- <div class="lower">
							<span class="description"></span>
						</div> --}}
					</div>

					<div class="image-container">
						<div class="image" href="#">
							<img src="//i.thick.at/DeificDjangoDjango019.png" alt="Image">
						</div>
						{{!-- <div class="lower">
							<span class="description"></span>
						</div> --}}
					</div>
				</div>

				<div class="new-image">
					<label for="file-upload-button" class="button">Add Images</label>
					<input type="file" id="file-upload-button" class="show-for-sr file-upload-prompt">
				</div>
			</div>
		</div>


		<div id="popup-file-drop"></div>

		<!-- script type="text/javascript" src="/js/lib/jquery-2.1.4.js"></script -->
		<!-- script type="text/javascript" src="/js/lib/jquery.unveil.js"></script -->
		<!-- script type="text/javascript" src="//cdn.jsdelivr.net/foundation/6.2.3/foundation.min.js"></script -->
		<!-- script type="text/javascript" src="//cdn.jsdelivr.net/clipboard.js/1.5.12/clipboard.min.js"></script -->
		<!-- script type="text/javascript" src="/js/lib/highcharts.js"></script -->
		<!-- script type="text/javascript" src="/js/lib/hc-exporting.js"></script -->
		<!-- script type="text/javascript" src="/js/lib/hc-dark-unica.js"></script -->
		<script type="text/javascript" src="/gallery/upload.js"></script>
	</body>
</html>
